<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <record id="dgn_view_partner_form_main" model="ir.ui.view">
            <field name="name">dgn.view.partner.form.main</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <field name="email" position='after'>
                    <field name="personal_id_number" attrs="{'invisible':['|',('is_company','=',True),('customer','=',False)], 'required': [('is_company','=', False)]}"/>
                    <field name="issued_date" attrs="{'invisible':['|',('is_company','=',True),('customer','=',False)]}"/>
                    <field name="issued_address" attrs="{'invisible':['|',('is_company','=',True),('customer','=',False)]}"/>
                </field>
                <field name="phone" position="attributes">
                    <attribute name="attrs">{'required': ['|',('is_company','=',True),('is_company','=',False)]}</attribute>
                </field>
            </field>
        </record>

        <record id="dng_view_partner_form_tab" model="ir.ui.view">
            <field name="name">dgn.view.partner.form.tab</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base_vat.view_partner_form" />
            <field name="arch" type="xml">
                <field name="vat" position="attributes">
                    <attribute name="attrs">{'required': [('is_company','=', True)]}</attribute>
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="partner_view_buttons_cus">
            <field name="name">partner.view.buttons_cus</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.partner_view_buttons" />
            <field name="priority" eval="20"/>
            <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]"/>
            <field name="arch" type="xml">
                <button name="open_partner_history" position="replace">
                    <button type="object"
                        class="oe_stat_button"
                        id="invoice_button_cus"
                        icon="fa-pencil-square-o"
                        name="open_partner_history"
                        attrs="{'invisible': [('customer', '=', False)]}"
                        context="{'default_partner_id': active_id}">
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_value"><field name="total_invoiced_cus" widget='monetary' options="{'currency_field': 'currency_id'}"/></span>
                            <span class="o_stat_text">Invoiced</span>
                        </div>
                    </button>
                </button>
            </field>
        </record>

        <record id="customer_workflow" model="workflow">
            <field name="name">customer.workflow</field>
            <field name="osv">res.partner</field>
            <field name="on_create">True</field>
        </record>

        <record id="activity_create_customer_start" model="workflow.activity">
            <field name="wkf_id" ref="customer_workflow"/>
            <field name="flow_start">True</field>
            <field name="name">Begin</field>
            <field name="kind">function</field>
            <field name="action">set_code_customer()</field>
        </record>

	</data>
</odoo>