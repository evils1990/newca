<?xml version="1.0"?>
<odoo>
	<data>
		<record id="dgn_view_account_payment_form" model="ir.ui.view">
        	<field name="name">view.account.payment.form</field>
        	<field name="model">account.payment</field>
        	<field name="inherit_id" ref="account.view_account_payment_form"/>
        	<field name="arch" type="xml">
				<field name="payment_date" position="after">
					<field name="payment_num" attrs="{'readonly': [('state','!=','draft')]}"/>
				</field>
        	</field>
    	</record>
		<record id="view_account_payment_search" model="ir.ui.view">
            <field name="name">dgn.account.payment.search</field>
            <field name="model">account.payment</field>
			<field name="inherit_id" ref="account.view_account_payment_search"/>
            <field name="arch" type="xml">
                 <field name="journal_id" position="after">
					<field name="payment_num"/>
				</field>
            </field>
        </record>
	</data>

</odoo>
