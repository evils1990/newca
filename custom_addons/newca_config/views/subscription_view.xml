<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    
    <record id="nca_view_form_subscription_inherited" model="ir.ui.view">
        <field name="name">nca.website.contract.subscription.inherited</field>
        <field name="model">sale.subscription</field>
        <field name="inherit_id" ref="website_contract.sale_subscription_view_form_inherit_sale_contract"/>
        <field name="arch" type="xml">
            <button name="%(website_contract.wizard_action)d" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>

            <button name="set_pending" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <button name="%(sale_contract.sale_subscription_close_reason_wizard_action)d" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <button name="%(sale_contract.sale_subscription_close_reason_wizard_action)d" context="{'cancel':1}" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <button name="prepare_renewal_order" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
        </field>
    </record>

    <record id="nca_view_list_subscription_inherited" model="ir.ui.view">
        <field name="name">nca.view.list.subscription.inherited</field>
        <field name="model">sale.subscription</field>
        <field name="inherit_id" ref="sale_contract.sale_subscription_view_list"/>
        <field name="arch" type="xml">
            <field name="state" position="after">
                <button name="prepare_renewal_order" type="object"
                        string="Renew"
                        help="Create a sale order that will overwrite this contract when confirmed (renewal quotation)"
                        confirm="Are you sure?"/>
                <button name="%(website_contract.wizard_action)d" type="action"
                        string="Upsell"
                        help="Add an option directly or create a sale order with prorated discount for the current invoicing period (options are added on confirmation)"/>
            </field>
        </field>
    </record>

    <record id="sale_contract.sale_subscription_close_reason_wizard_action" model="ir.actions.act_window">
        <field name="name">Close/Cancel Reason</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.subscription.close.reason.wizard</field>
        <!--<field name="inherit_id" ref="sale_contract.sale_subscription_close_reason_wizard_action"/>-->
        <field name="view_mode">form</field>
        <field name="view_id" ref="sale_contract.sale_subscription_close_reason_view_form"/>
        <field name="target">new</field>
        <field name="src_model">sale.subscription</field>
    </record>
    
</odoo>