<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--Subscription form hide buttons-->
    <record id="nca_view_form_subscription" model="ir.ui.view">
        <field name="name">nca.website.contract.subscription</field>
        <field name="model">sale.subscription</field>
        <field name="inherit_id" ref="website_contract.sale_subscription_view_form_inherit_sale_contract"/>
        <field name="arch" type="xml">
            <button name="set_open" position="attributes">
                <attribute name="groups">sale_contract.group_sale_contract_manager</attribute>
            </button>
            <button name="action_subscription_invoice" position="attributes">
                <attribute name="groups">sales_team.group_sale_salesman,account.group_account_user</attribute>
            </button>

            <button name="%(website_contract.wizard_action)d" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>

            <button name="set_pending" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <button name="%(sale_contract.sale_subscription_close_reason_wizard_action)d" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <button name="%(sale_contract.sale_subscription_close_reason_wizard_action)d" context="{'cancel':1}" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <button name="prepare_renewal_order" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>

            <!--Hidden Generate Invoice button for Sales and Subscription role-->
            <button name="recurring_invoice" position="attributes">
                <attribute name="groups">account.group_account_user</attribute>
            </button>
        </field>
    </record>

    <!--Subscription tree show Renew button-->
    <record id="nca_view_tree_subscription" model="ir.ui.view">
        <field name="name">nca.view.tree.subscription</field>
        <field name="model">sale.subscription</field>
        <field name="inherit_id" ref="sale_contract.sale_subscription_view_list"/>
        <field name="arch" type="xml">
            <field name="state" position="after">
                <button name="prepare_renewal_order" type="object"
                        string="Renew / Close"
                        help="Create a sale order that will overwrite this contract when confirmed (renewal quotation)"
                        confirm="Click 'OK' button will create a recurring ticket. &#xA;Do you really want to continue?"/>
                <button name="%(website_contract.wizard_action)d" type="action"
                        string="Upsell"
                        help="Add an option directly or create a sale order with prorated discount for the current invoicing period (options are added on confirmation)"/>
            </field>
            <field name="recurring_total" position="attributes">
                <attribute name="groups">sales_team.group_sale_salesman,account.group_account_user</attribute>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="nca_view_tree_subscription_sale_order">
        <field name="name">nca.view.tree.subscription.sale.order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="website_contract.sale_order_view_tree_subscription"/>
        <field name="arch" type="xml">
            <field name="amount_total" position="attributes">
                <attribute name="groups">sales_team.group_sale_salesman,account.group_account_user</attribute>
            </field>

        </field>
    </record>
</odoo>