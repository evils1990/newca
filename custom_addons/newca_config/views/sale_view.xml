<?xml version="1.0"?>
<odoo>
	<data noupdate="1">
        <record id="product_uom_month" model="product.uom">
            <field name="name">Month(s)</field>
            <field eval="ref('product.uom_categ_wtime')" name="category_id"/>
            <field name="factor" eval="30"/>
        </record>
    </data>

	<data>
		<record id="view_order_form" model="ir.ui.view">
        	<field name="name">newca.sale.order.form</field>
        	<field name="model">sale.order</field>
        	<field name="inherit_id" ref="sale.view_order_form"/>
        	<field name="arch" type="xml">
				<field name="partner_shipping_id" position="after">
					<field name="subscription_management" />
					<field name="end_date" attrs="{'invisible': [('subscription_management', '!=', ('close'))],'required': [('subscription_management', '=', ('close'))],'readonly': [('state', '!=', 'draft')]}"/>
					<field name="cancel_date" attrs="{'invisible': [('subscription_management', '!=', ('cancel'))],'required': [('subscription_management', '=', ('cancel'))],'readonly': [('state', '!=', 'draft')]}"/>
				</field>

				<xpath expr="//field[@name='order_line']/.." position="after">
					<page string="Free Order Days"
						  attrs="{'invisible': [('subscription_management', '!=', 'free')]}">
						<group>
							<field name="free_day_description" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
							<field name="free_day_qty" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
						</group>
					</page>
				</xpath>

        	</field>
    	</record>

		<record id="crm_team_salesteams_view_form" model="ir.ui.view">
			<field name="name">crm.team.agency.form</field>
			<field name="model">crm.team</field>
			<field name="inherit_id" ref="sale.crm_team_salesteams_view_form"/>
			<field name="arch" type="xml">
				<xpath expr="//page[@name='more_info']" position="inside">
					<group string="Stock">
						<field name="location_id"  attrs="{'required': [('crm_type', '=', 'agency')]}" />
					</group>
				</xpath>
				
				<!--show more info page for Sales Manager-->
                <xpath expr="//page[@name='more_info']" position="attributes">
					<attribute name="groups">sales_team.group_sale_manager</attribute>
				</xpath>
			</field>
		</record>

	</data>

	<!--Sale Order views-->
	<!--Sale Order tree hide money for Subscription Management group-->
    <record id="nca_view_tree_sale_order" model="ir.ui.view">
        <field name="name">nca.view.tree.sale.order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <field name="amount_total" position="attributes">
                <attribute name="groups">sales_team.group_sale_salesman,account.group_account_user</attribute>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="nca_view_tree_sale_order_quotation">
        <field name="name">nca.view.tree.sale.order.quotation</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <field name="amount_total" position="attributes">
                <attribute name="groups">sales_team.group_sale_salesman,account.group_account_user</attribute>
            </field>
        </field>
    </record>

    <!--Sale Quotation hide sale order done or cancel-->
    <record id="sale.action_quotations" model="ir.actions.act_window">
        <field name="domain">[('state','in',('draft','sent','cancel'))]</field>
    </record>

    <!--Sale Order form hide confirm, create invoice for Subscription Management group-->
    <record id="nca_view_form_sale_order" model="ir.ui.view">
        <field name="name">nca.view.form.sale.order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
		
			<field name="partner_id" position="after">
				<field name="partner_name" readonly="1"/>
			</field>
		
            <xpath expr="//button[@name='action_confirm'][1]" position="attributes">
                <attribute name="groups">sale_contract.group_sale_contract_manager</attribute>
            </xpath>
            <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                <attribute name="groups">sale_contract.group_sale_contract_manager</attribute>
            </xpath>
            <xpath expr="//button[@name='action_quotation_send'][1]" position="attributes">
                <attribute name="groups">sales_team.group_sale_salesman</attribute>
            </xpath>
            <xpath expr="//button[@name='action_quotation_send'][2]" position="attributes">
                <attribute name="groups">sales_team.group_sale_salesman</attribute>
            </xpath>
            <xpath expr="//button[@name=%(sale.action_view_sale_advance_payment_inv)d][1]" position="attributes">
                <attribute name="groups">sales_team.group_sale_salesman,account.group_account_user</attribute>
            </xpath>
            <xpath expr="//button[@name=%(sale.action_view_sale_advance_payment_inv)d][2]" position="attributes">
                <attribute name="groups">sales_team.group_sale_salesman,account.group_account_user</attribute>
            </xpath>

            <button name="action_view_invoice" position="attributes">
                <attribute name="groups">sales_team.group_sale_salesman,account.group_account_user</attribute>
            </button>

            <!--Hide money for Subscription groups-->
            <xpath expr="//field[@name='price_unit'][1]" position="attributes">
                <attribute name="groups">sales_team.group_sale_salesman,account.group_account_user</attribute>
            </xpath>
            <xpath expr="//field[@name='price_unit'][2]" position="attributes">
                <attribute name="groups">sales_team.group_sale_salesman,account.group_account_user</attribute>
            </xpath>
            <xpath expr="//field[@name='discount'][1]" position="attributes">
                <attribute name="groups">sales_team.group_sale_salesman,account.group_account_user</attribute>
            </xpath>
            <xpath expr="//field[@name='discount'][2]" position="attributes">
                <attribute name="groups">sales_team.group_sale_salesman,account.group_account_user</attribute>
            </xpath>
            <xpath expr="//field[@name='tax_id'][1]" position="attributes">
                <attribute name="groups">sales_team.group_sale_salesman,account.group_account_user</attribute>
            </xpath>
            <xpath expr="//field[@name='tax_id'][2]" position="attributes">
                <attribute name="groups">sales_team.group_sale_salesman,account.group_account_user</attribute>
            </xpath>
            <xpath expr="//field[@name='price_subtotal'][1]" position="attributes">
                <attribute name="groups">sales_team.group_sale_salesman,account.group_account_user</attribute>
            </xpath>
            <xpath expr="//field[@name='price_subtotal'][2]" position="attributes">
                <attribute name="groups">sales_team.group_sale_salesman,account.group_account_user</attribute>
            </xpath>
            <xpath expr="//field[@name='price_total']" position="attributes">
                <attribute name="groups">sales_team.group_sale_salesman,account.group_account_user</attribute>
            </xpath>

            <xpath expr="//field[@name='amount_untaxed']" position="attributes">
                <attribute name="groups">sales_team.group_sale_salesman,account.group_account_user</attribute>
            </xpath>
            <xpath expr="//field[@name='amount_tax']" position="attributes">
                <attribute name="groups">sales_team.group_sale_salesman,account.group_account_user</attribute>
            </xpath>
            <xpath expr="//field[@name='amount_total']" position="attributes">
                <attribute name="groups">sales_team.group_sale_salesman,account.group_account_user</attribute>
            </xpath>
        </field>
    </record>

</odoo>
