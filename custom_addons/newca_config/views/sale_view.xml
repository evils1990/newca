<?xml version="1.0"?>
<odoo>
	<data noupdate="1">
        <record id="product_uom_month" model="product.uom">
            <field name="name">Month(s)</field>
            <field eval="ref('product.uom_categ_wtime')" name="category_id"/>
            <field name="factor" eval="30"/>
        </record>
    </data>

	<data>
		<record id="view_order_form" model="ir.ui.view">
        	<field name="name">newca.sale.order.form</field>
        	<field name="model">sale.order</field>
        	<field name="inherit_id" ref="sale.view_order_form"/>
        	<field name="arch" type="xml">
				<field name="partner_shipping_id" position="after">
					<field name="subscription_management" />
					<field name="end_date" attrs="{'invisible': [('subscription_management', '!=', ('close'))],'required': [('subscription_management', '=', ('close'))],'readonly': [('state', '!=', 'draft')]}"/>
					<field name="cancel_date" attrs="{'invisible': [('subscription_management', '!=', ('cancel'))],'required': [('subscription_management', '=', ('cancel'))],'readonly': [('state', '!=', 'draft')]}"/>
				</field>

				<xpath expr="//field[@name='order_line']/.." position="after">
					<page string="Free Order Days"
						  attrs="{'invisible': [('subscription_management', '!=', 'free')]}">
						<group>
							<field name="free_day_description" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
							<field name="free_day_qty" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
						</group>
					</page>
				</xpath>

        	</field>
    	</record>

		<record id="crm_team_salesteams_view_form" model="ir.ui.view">
			<field name="name">crm.team.agency.form</field>
			<field name="model">crm.team</field>
			<field name="inherit_id" ref="sale.crm_team_salesteams_view_form"/>
			<field name="arch" type="xml">
				<xpath expr="//page[@name='more_info']" position="inside">
					<group string="Stock">
						<field name="location_id"  attrs="{'required': [('crm_type', '=', 'agency')]}" />
					</group>
				</xpath>
			</field>
		</record>
	
	<!-- Confirm button -->
	
	<record id="nca_view_form_sale_order" model="ir.ui.view">
        <field name="name">nca.view.form.sale.order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="partner_name" readonly="1"/>
            </field>
            <button name="action_confirm" position="attributes">
                <attribute name="groups" eval="[(4,ref('sales_team.group_sale_salesman_all_leads'))]"/>
            </button>
        </field>
    </record>
	
	<!-- Sales user menu -->
	
	<record id="nca_rule_groups_no_admin" model="ir.rule">
        <field name="name">nca.rule.groups.no.admin</field>
        <field name="model_id" ref="base.model_res_groups"/>
        <field name="domain_force">
            [('name','!=','Settings')]
        </field>
    </record>
	
	<record id="nca_action_menu_sale_users" model="ir.actions.act_window">
        <field name="name">Users</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.users</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="base.view_users_tree"/>
        <field name="search_view_id" ref="base.view_users_search"/>
        <field name="context">{'search_default_no_share': 1}</field>
        <field name="help">Create and manage users that will connect to the system. Users can be deactivated should there be a period of time during which they will/should not connect to the system. You can assign them groups in order to give them specific access to the applications they need to use in the system.</field>
    </record>

    <record id="nca_action_res_users_view2" model="ir.actions.act_window.view">
        <field eval="20" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="base.user_groups_view"/>
        <field name="act_window_id" ref="nca_action_menu_sale_users"/>
    </record>

    <record id="action_res_users_view1" model="ir.actions.act_window.view">
        <field eval="10" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="base.view_users_tree"/>
        <field name="act_window_id" ref="nca_action_menu_sale_users"/>
    </record>

    <menuitem id="nca_menu_users" name="Users"
              sequence="101" parent="sales_team.menu_base_partner"/>
    <menuitem id="nca_menu_users_users" name="Users"
              parent="nca_menu_users" action="nca_action_menu_sale_users"/>

	</data>
</odoo>
