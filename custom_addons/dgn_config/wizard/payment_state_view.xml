<odoo>
    <data>

        <record id="payment_confirm_view" model="ir.ui.view">
            <field name="name">payment.confirm.form</field>
            <field name="model">account.payment.confirm</field>
            <field name="arch" type="xml">
                <form string="Confirm Open Payments">
                    <p class="oe_grey">
                        Confirm list of payments.
                    </p>
                    <footer>
                        <button string="Confirm Payment" name="payment_confirm" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_payment_confirm"
            multi="True"
            key2="client_action_multi" name="Confirm Open Payments"
            res_model="account.payment.confirm" src_model="account.payment"
            view_mode="form" target="new" view_type="form" />

    </data>
</odoo>
