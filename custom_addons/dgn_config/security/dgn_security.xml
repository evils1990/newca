<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">
        <record model="ir.module.category" id="module_category_dgn_access">
            <field name="name">DGN Access Right</field>
            <field name="description">Group Purchase Logistic</field>
            <field name="sequence">10</field>
        </record>
        <record id="group_sale_user_custom" model="res.groups">
            <field name="name">DGN User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user')),(4, ref('helpdesk.group_helpdesk_user'))]"/>
            <field name="comment">Sale User</field>
        </record>
		<record id="group_sale_noc" model="res.groups">
            <field name="name">NOC</field>
            <field name="category_id" ref="module_category_dgn_access"/>
            <field name="implied_ids" eval="[(4, ref('group_sale_user_custom')),(4, ref('base.group_partner_manager'))]"/>
            <field name="comment">NOC</field>
        </record>

        <record id="group_sale_tcv" model="res.groups">
            <field name="name">TVC</field>
            <field name="category_id" ref="module_category_dgn_access"/>
            <field name="implied_ids" eval="[(4, ref('group_sale_user_custom'))]"/>
            <field name="comment">TVC</field>
        </record>

        <record id="group_sale_accountant" model="res.groups">
            <field name="name">Accountant</field>
            <field name="category_id" ref="module_category_dgn_access"/>
            <field name="implied_ids" eval="[(4, ref('account.group_account_user')),(4, ref('sales_team.group_sale_manager')),(4, ref('sale_contract.group_sale_contract_manager'))]"/>
            <field name="comment">Sale Accountant</field>
        </record>

        <record id="group_sale_cus_care" model="res.groups">
            <field name="name">Customer Care</field>
            <field name="category_id" ref="module_category_dgn_access"/>
            <field name="implied_ids" eval="[(4, ref('group_sale_user_custom'))]"/>
            <field name="comment">Customer Care</field>
        </record>

        <record id="group_sale_infrastructure" model="res.groups">
            <field name="name">Infrastructure</field>
            <field name="category_id" ref="module_category_dgn_access"/>
            <field name="implied_ids" eval="[(4, ref('group_sale_user_custom'))]"/>
            <field name="comment">Infrastructure</field>
        </record>

        <record id="group_sale_system_manager" model="res.groups">
            <field name="name">Call Center</field>
            <field name="category_id" ref="module_category_dgn_access"/>
            <field name="implied_ids" eval="[(4, ref('group_sale_user_custom')),(4, ref('helpdesk.group_helpdesk_manager')),(4, ref('base.group_partner_manager'))]"/>
            <field name="comment">Call Center</field>
        </record>
	</data>
    <data noupdate="0">
		<!--model_helpdesk_ticket-->
		<record id="rule_helpdesk_ticket_user" model="ir.rule">
			<field name="name">View ticket by user</field>
			<field name="model_id" ref="helpdesk.model_helpdesk_ticket" />
			<field name="groups" eval="[(4, ref('group_sale_infrastructure'))]"/>
			<field name="domain_force">['|', ('team_id.member_ids', 'in', [user.id]),('team_id.user_id', 'in', [user.id])]</field>
		</record>
        <record id="dgn_helpdesk_user_rule" model="ir.rule">
            <field name="name">Helpdesk User</field>
            <field name="model_id" ref="helpdesk.model_helpdesk_team"/>
            <field name="domain_force">['|', ('member_ids','in', [user.id]), ('user_id', 'in', [user.id])]</field>
            <field name="groups" eval="[(4, ref('group_sale_infrastructure'))]"/>
        </record>
    </data>
</openerp>
